@model Q09_2_MVC.Models.HomeViewModel

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

                        <div class="jumbotron">
                            @*<h3 style="align-content: center">Reservation Details</h3>*@
                        </div>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Reservation Details</h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.NumberOfSeats, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-md-4">
                                        @Html.DropDownListFor(model => model.NumberOfSeats,
                                        (
                                        new List<SelectListItem>(){
                                            new SelectListItem {Value="0", Text = "Please Select"},
                                            new SelectListItem {Value="1", Text = "Table for One"},
                                            new SelectListItem {Value="2", Text = "Table for Two"},
                                            new SelectListItem {Value="3", Text = "Table for Three"},
                                            new SelectListItem {Value="5", Text = "Table for Five"}
                                        }), new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.NumberOfSeats, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.SeatPrice, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.SeatPrice, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SeatPrice, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="submit" value="Place Reservation" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </div>

    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
